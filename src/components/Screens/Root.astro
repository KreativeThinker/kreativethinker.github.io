---
import Heading from "../../components/Heading.astro";
import Screen from "../../components/Screen.astro";
import SocialsLinks from "../SocialsLinks.astro";
---

<style is:global>
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes fadeOut {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
  .fade-in {
    animation: fadeIn 2s ease forwards;
  }
  .fade-out {
    animation: fadeOut 2s ease forwards;
  }
</style>

<Screen
  anchor="root"
  background="bg-background"
  color="text-text"
  next_section="about"
  separator
>
  <Heading id="heading-top" color="text-accent" classList="fade-in"
    >Anumeya</Heading
  >
  <SocialsLinks />
  <Heading id="heading-bottom" color="text-accent" classList="fade-in"
    >Sehgal</Heading
  >
</Screen>
